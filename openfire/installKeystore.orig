#!/bin/sh

sudo cp -p /etc/openfire/security/keystore security

echo INFO: create keystore for OpenFire
keytool -storepasswd -keystore keystore -new %KEYSTORE_PASS% -storepass changeit
keytool -genkey -alias %HOSTNAME% -keystore keystore -storepass %KEYSTORE_PASS% -validity 365 -keypass %KEYSTORE_PASS% -dname cn=%HOSTNAME%,dc=xchangecore,dc=us

echo INFO: create keystore for Tomcat
keytool -genkey -keyalg RSA -keysize 2048 -alias tomcat -keystore keystore.jks -storepass %KEYSTORE_PASS% -keypass %KEYSTORE_PASS% -validity 365 -dname cn=%HOSTNAME%,ou=xchangecore,o=xchangecore,l=xchangecore,st=xchangecore,c=US


