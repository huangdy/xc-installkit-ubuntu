<?xml version='1.0' encoding='utf-8'?>
<Server port="8005" shutdown="SHUTDOWN">
 <Listener className="org.apache.catalina.core.JasperListener" />
 <Listener className="org.apache.catalina.core.JreMemoryLeakPreventionListener" />
 <Listener className="org.apache.catalina.mbeans.GlobalResourcesLifecycleListener" />
 <Listener className="org.apache.catalina.core.ThreadLocalLeakPreventionListener" />
<!--
 <Listener className="org.apache.catalina.core.AprLifecycleListener" SSLEngine="on" />
-->

 <GlobalNamingResources>
  <Resource name="UserDatabase" auth="Container" type="org.apache.catalina.UserDatabase"
   description="User database that can be updated and saved" factory="org.apache.catalina.users.MemoryUserDatabaseFactory"
   pathname="conf/tomcat-users.xml" />
 </GlobalNamingResources>
 <Service name="Catalina">
  <!-- URIEncoding not existed in previous -->
  <Connector port="80" protocol="HTTP/1.1" connectionTimeout="20000" URIEncoding="UTF-8"
   redirectPort="443" />
  <Connector port="443" protocol="HTTP/1.1" SSLEnabled="true" maxThreads="150" scheme="https"
   secure="true" keystoreFile="conf/keystore.jks" keystorePass="xc.1549" clientAuth="false"
   sslProtocol="TLS" />
  <Connector port="8009" protocol="AJP/1.3" redirectPort="443" />
  <Engine name="Catalina" defaultHost="localhost">

   <Realm className="org.apache.catalina.realm.JNDIRealm" debug="99" connectionURL="ldaps://localhost:636"
    userPattern="cn={0},dc=xchangecore,dc=us" roleBase="dc=xchangecore,dc=us" roleName="cn"
    roleSearch="(uniqueMember={0})" />

   <Host name="localhost" appBase="webapps" unpackWARs="true" autoDeploy="true" xmlValidation="false"
    xmlNamespaceAware="false">

    <Context path="" docBase="xchangecore" debug="true" privileged="true">
     <Valve className="org.apache.catalina.authenticator.BasicAuthenticator"
      disableProxyCaching="false" />
    </Context>
   </Host>

  </Engine>
 </Service>
</Server>
